---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import Layout from '../../../layouts/BlogPost.astro';
import { estimateReadTime, isTempArticle } from '../../../utils/blog';

export async function getStaticPaths() {
	function normalizeSlug(id: string) {
		return id.replace(/\/index$/, '').replace(/\/+$/, '');
	}
	const langs = ['ru', 'en', 'es'];
	const paths = [];

	for (const lang of langs) {
		const collectionName = `blog-${lang}` as 'blog-ru' | 'blog-en' | 'blog-es';
		const posts = await getCollection(collectionName).catch(() => []);
		
		for (const post of posts) {
			if (isTempArticle(post.id)) continue;
			if (post.data.draft) continue; // Пропускаем draft статьи
			const slug = normalizeSlug(post.id);
			paths.push({
				params: { lang, slug },
				props: { ...post, id: slug },
			});
		}
	}

	return paths;
}

type Props = CollectionEntry<'blog-ru' | 'blog-en' | 'blog-es'>;

const post = Astro.props;
const { Content, headings } = await render(post);

// Вычисляем время чтения из сырого контента статьи
const readingTime = post.body ? estimateReadTime(post.body) : undefined;
---

<Layout {...post.data} readingTime={readingTime} postId={post.id} headings={headings} category={post.data.category}>
	<Content />
</Layout>
