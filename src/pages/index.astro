---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Windows95Button from '../components/Windows95Button.astro';
import Windows98Header from '../components/Windows98Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="ru" class="windows98">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="windows98">
		<Windows98Header />
		<main>
			<section class="hero">
				<h1>Добро пожаловать в {SITE_TITLE}</h1>
				<p class="subtitle">{SITE_DESCRIPTION}</p>
				<Windows95Button href="/blog/" variant="primary">Читать блог</Windows95Button>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero {
		text-align: center;
		padding: 3em 2em;
		max-width: 720px;
		margin: 2em auto;
		background: var(--bg-secondary, #FFFFFF);
		border: 2px outset var(--bg-primary, #AAAAAA);
	}

	.hero h1 {
		font-size: 1.8em;
		margin-bottom: 1em;
		color: var(--text-primary, #000000);
		font-family: 'Press Start 2P', 'Courier New', monospace;
		line-height: 1.4;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.hero .subtitle {
		font-size: 14px;
		color: var(--text-secondary, #555555);
		margin-bottom: 2em;
		line-height: 1.6;
		font-family: 'Courier New', 'Courier', monospace;
	}

	@media (max-width: 720px) {
		.hero {
			padding: 2em 1em;
			margin: 1em auto;
		}

		.hero h1 {
			font-size: 1.4em;
		}

		.hero .subtitle {
			font-size: 13px;
		}
	}
</style>
