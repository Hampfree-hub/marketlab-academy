---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
import { ui } from '../i18n/ui';
---

<!doctype html>
<html lang="ru">
	<head>
		<BaseHead title="MAINTENANCE / ОБСЛУЖИВАНИЕ" description="System reboot in progress" />
	</head>
	<body>
		<Header />
		<main class="container">
			<div class="maintenance-wrapper">
				<div class="nes-container is-dark with-title is-centered">
					<p class="title">SYSTEM_STATUS: OFFLINE</p>
					
					<div class="maintenance-icon">
						<!-- Pixel Gear -->
						<svg width="100" height="100" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 8c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm0 6c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z"/>
							<path d="M22 12c0-.55-.45-1-1-1h-2.09c-.11-.37-.25-.72-.41-1.06l1.48-1.48c.39-.39.39-1.02 0-1.41l-1.41-1.41c-.39-.39-1.02-.39-1.41 0l-1.48 1.48c-.34-.16-.69-.3-1.06-.41V4c0-.55-.45-1-1-1h-2c-.55 0-1 .45-1 1v2.09c-.37.11-.72.25-1.06.41L7.9 5.02c-.39-.39-1.02-.39-1.41 0L5.08 6.43c-.39.39-.39 1.02 0 1.41l1.48 1.48c-.16.34-.3.69-.41 1.06H4c-.55 0-1 .45-1 1v2c0 .55.45 1 1 1h2.09c.11.37.25.72.41 1.06l-1.48 1.48c-.39.39-.39 1.02 0 1.41l1.41 1.41c.39.39 1.02.39 1.41 0l1.48-1.48c.34.16.69.3 1.06.41V20c0 .55.45 1 1 1h2c.55 0 1-.45 1-1v-2.09c.37-.11.72-.25 1.06-.41l1.48 1.48c.39.39 1.02.39 1.41 0l1.41-1.41c.39-.39.39-1.02 0-1.41l-1.48-1.48c.16-.34.3-.69.41-1.06H20c.55 0 1-.45 1-1v-2z"/>
						</svg>
					</div>

					<div class="lang-block">
						<h1 class="mono">{ui.ru['maintenance.title']}</h1>
						<p>{ui.ru['maintenance.message']}</p>
						<p class="subtitle">{ui.ru['maintenance.subtitle']}</p>
					</div>

					<div class="divider">---</div>

					<div class="lang-block">
						<h1 class="mono">{ui.en['maintenance.title']}</h1>
						<p>{ui.en['maintenance.message']}</p>
						<p class="subtitle">{ui.en['maintenance.subtitle']}</p>
					</div>

					<div class="divider">---</div>

					<div class="lang-block">
						<h1 class="mono">{ui.es['maintenance.title']}</h1>
						<p>{ui.es['maintenance.message']}</p>
						<p class="subtitle">{ui.es['maintenance.subtitle']}</p>
					</div>
					
					<div class="maintenance-status">
						<span class="status-code">ERROR_CODE: 503_SERVICE_UNAVAILABLE</span>
						<span class="status-msg">SYSTEM_REBOOT_IN_PROGRESS...</span>
					</div>
				</div>
			</div>
		</main>
		<Footer />

		<style>
			.maintenance-wrapper {
				min-height: 60vh;
				display: flex;
				align-items: center;
				justify-content: center;
				padding: 4rem 0;
			}

			.nes-container {
				max-width: 800px;
				width: 100%;
				padding: 3rem;
				border: 4px solid var(--nes-border-primary);
				background-color: var(--nes-bg-secondary);
			}

			.maintenance-icon {
				color: var(--nes-accent-yellow);
				margin-bottom: 3rem;
				animation: rotate 4s steps(8) infinite;
			}

			@keyframes rotate {
				from { transform: rotate(0deg); }
				to { transform: rotate(360deg); }
			}

			.lang-block {
				margin-bottom: 2rem;
			}

			h1 {
				font-size: 1.2rem;
				line-height: 1.6;
				margin-bottom: 1rem;
				color: var(--nes-accent-green);
			}

			p {
				font-size: 0.9rem;
				margin-bottom: 0.5rem;
			}

			.subtitle {
				font-family: 'Press Start 2P', monospace;
				font-size: 0.8rem;
				color: var(--color-text-primary);
			}

			.divider {
				color: var(--nes-border-primary);
				margin-bottom: 2rem;
				letter-spacing: 4px;
			}

			.maintenance-status {
				display: flex;
				flex-direction: column;
				gap: 0.5rem;
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.75rem;
				color: var(--color-text-secondary);
				background: rgba(0, 0, 0, 0.3);
				padding: 1rem;
				border-left: 4px solid var(--nes-accent-red);
				text-align: left;
				margin-top: 3rem;
			}

			.status-code {
				color: var(--nes-accent-red);
			}

			@media (max-width: 768px) {
				.nes-container {
					padding: 1.5rem;
				}
				h1 {
					font-size: 1rem;
				}
				.subtitle {
					font-size: 0.7rem;
				}
			}
		</style>
	</body>
</html>
