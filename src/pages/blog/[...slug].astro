---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
	const postsRu = await getCollection('blog-ru').catch(() => []);
	const postsEn = await getCollection('blog-en').catch(() => []);
	const postsEs = await getCollection('blog-es').catch(() => []);
	
	const allPosts = [
		...postsRu.map((post) => ({ ...post, lang: 'ru' })),
		...postsEn.map((post) => ({ ...post, lang: 'en' })),
		...postsEs.map((post) => ({ ...post, lang: 'es' })),
	];
	
	return allPosts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}

type Props = CollectionEntry<'blog-ru' | 'blog-en' | 'blog-es'> & { lang?: string };

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data}>
	<Content />
</BlogPost>
