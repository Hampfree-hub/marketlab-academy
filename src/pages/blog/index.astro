---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import BannerCarousel from '../../components/BannerCarousel.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Windows98Header from '../../components/Windows98Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en" class="windows98">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: 1200px;
				margin: 2em auto 0;
				padding: 2em 1em;
				background: var(--bg-secondary, #FFFFFF);
				border: 2px outset var(--bg-primary, #AAAAAA);
			}
			ul {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 1rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				transition: all 0.1s ease;
			}
			ul li * {
				text-decoration: none;
			}
			ul li a {
				display: block;
				padding: 1em;
				background: var(--bg-secondary, #FFFFFF);
				border: 1px solid var(--border-dark, #555555);
				transition: all 0.1s ease;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border: 1px solid var(--border-dark, #555555);
				width: 100%;
				height: auto;
			}
			.title {
				margin: 0 0 0.5em 0;
				color: var(--text-primary, #000000);
				line-height: 1.4;
				font-family: 'Press Start 2P', 'Courier New', monospace;
				font-size: 13px;
				transition: color 0.1s ease;
			}
			.date {
				margin: 0;
				color: var(--text-secondary, #555555);
				font-family: 'Courier New', 'Courier', monospace;
				font-size: 12px;
				transition: color 0.1s ease;
			}
			ul li a:hover {
				background: var(--text-primary, #000000);
				color: var(--bg-secondary, #FFFFFF);
			}
			ul li a:hover .title,
			ul li a:hover .date {
				color: var(--bg-secondary, #FFFFFF);
			}
			@media (max-width: 720px) {
				ul {
					grid-template-columns: 1fr;
					gap: 1rem;
				}
			}
		</style>
	</head>
	<body class="windows98">
		<Windows98Header />
		<BannerCarousel />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
