---
// src/pages/blog/index.astro
import TerminalLayout from '../../layouts/TerminalLayout.astro';
import ArticleGrid from '../../components/ArticleGrid.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
---

<TerminalLayout title={`REPORTS | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
	<main class="blog-terminal">
		<header class="page-header">
			<h1><span class="cmd-prefix">></span> access root/reports/</h1>
			<p class="subtitle">База данных восстановленных отчетов и алгоритмов Market Lab.</p>
		</header>

		<ArticleGrid />

		<section class="system-section help-box">
			<div class="section-header"><span class="cmd-prefix">></span> help reports</div>
			<div class="help-content">
				<p>Все отчеты хранятся в формате <code>.dat</code>, <code>.exe</code> или <code>.sys</code> в зависимости от уровня доступа и типа данных.</p>
				<ul>
					<li><code>.sys</code> — Критически важные системные обновления</li>
					<li><code>.exe</code> — Активные торговые стратегии</li>
					<li><code>.dat</code> — Обучающие материалы и гайды</li>
					<li><code>.log</code> — Общие отчеты о рынке</li>
				</ul>
			</div>
		</section>
	</main>
</TerminalLayout>

<style>
	.blog-terminal {
		display: flex;
		flex-direction: column;
		gap: 30px;
	}

	.page-header {
		margin-bottom: 20px;
	}

	.page-header h1 {
		margin-top: 0;
	}

	.subtitle {
		color: var(--term-dim);
		font-size: 0.9rem;
	}

	.cmd-prefix { color: var(--term-green); }

	.help-box {
		margin-top: 40px;
		border: 1px solid var(--term-dim);
		padding: 20px;
		background: rgba(0, 217, 255, 0.02);
	}

	.help-content {
		font-size: 0.8rem;
		line-height: 1.6;
		color: var(--term-blue);
	}

	.help-content ul {
		list-style: none;
		margin-top: 10px;
	}

	.help-content li::before {
		content: "  * ";
	}

	.help-content code {
		color: var(--term-amber);
	}
</style>
