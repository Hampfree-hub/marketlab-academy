---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="ru">
	<head>
		<BaseHead title={title} description={description} />
		<link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
		<style>
			body {
				background-color: #0c0c0c;
				color: #00ff41; /* Классический зеленый терминал */
				font-family: 'JetBrains Mono', monospace;
				margin: 0;
				line-height: 1.5;
			}

			.terminal-container {
				max-width: 800px;
				margin: 2rem auto;
				padding: 2rem;
				border: 1px solid #00ff41;
				box-shadow: 0 0 20px rgba(0, 255, 65, 0.2);
				position: relative;
				overflow: hidden;
			}

			/* CRT Эффект */
			.terminal-container::before {
				content: " ";
				display: block;
				position: absolute;
				top: 0; left: 0; bottom: 0; right: 0;
				background: linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.25) 50%), linear-gradient(90deg, rgba(255, 0, 0, 0.06), rgba(0, 255, 0, 0.02), rgba(0, 0, 255, 0.06));
				z-index: 2;
				background-size: 100% 2px, 3px 100%;
				pointer-events: none;
			}

			.scanline {
				width: 100%;
				height: 100px;
				z-index: 3;
				background: linear-gradient(0deg, rgba(0, 0, 0, 0) 0%, rgba(255, 255, 255, 0.2) 10%, rgba(0, 0, 0, 0.1) 100%);
				opacity: 0.1;
				position: absolute;
				bottom: 100%;
				animation: scanline 10s linear infinite;
			}

			@keyframes scanline {
				0% { bottom: 100%; }
				100% { bottom: -100px; }
			}

			.header-info {
				border-bottom: 1px solid #00ff41;
				margin-bottom: 2rem;
				padding-bottom: 1rem;
			}

			.prompt {
				color: #fff;
				margin-right: 0.5rem;
			}

			.prose {
				color: #00ff41;
			}

			.prose :global(h1), .prose :global(h2), .prose :global(h3) {
				color: #fff;
				text-transform: uppercase;
				border-bottom: 1px dashed #00ff41;
			}

			.prose :global(a) {
				color: #fff;
				text-decoration: underline;
			}

			.prose :global(img) {
				border: 1px solid #00ff41;
				filter: grayscale(100%) brightness(1.2) contrast(1.2);
			}

			.prose :global(ul) {
				list-style-type: "[*] ";
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="terminal-container">
				<div class="scanline"></div>
				<div class="header-info">
					<div><span class="prompt">></span> ACCESSING_FILE: {title}</div>
					<div><span class="prompt">></span> TIMESTAMP: <FormattedDate date={pubDate} /></div>
					{updatedDate && <div><span class="prompt">></span> LAST_MODIFIED: <FormattedDate date={updatedDate} /></div>}
				</div>
				<article class="prose">
					<slot />
				</article>
			</div>
		</main>
		<Footer />
	</body>
</html>


