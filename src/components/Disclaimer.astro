---
// Компонент дисклеймера
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="disclaimer nes-dialog is-rounded">
	<p class="disclaimer-title"><strong>{t('disclaimer.title')}</strong></p>
	<div class="disclaimer-content">
		<p>{t('disclaimer.p1')}</p>
		<p>{t('disclaimer.p2')}</p>
		<p>{t('disclaimer.p3')}</p>
	</div>
</div>

<style>
	.disclaimer {
		margin: 0;
		font-size: 0.9rem;
		line-height: 1.8;
		color: var(--color-text-primary);
		z-index: 1;
	}

	.disclaimer-content {
		position: relative;
		z-index: 2;
	}

	.disclaimer-title {
		margin: 0 0 1rem 0;
		color: var(--nes-accent-red);
		font-weight: 700;
		position: relative;
		z-index: 2;
		font-family: 'Press Start 2P', monospace;
		font-size: 0.75rem;
	}

	.disclaimer p {
		margin: 1rem 0;
		padding: 0;
	}

	.disclaimer-humor {
		margin-top: 1.5rem;
		padding-top: 1.5rem;
		border-top: 2px solid rgba(0, 216, 0, 0.1);
		font-style: italic;
		opacity: 0.8;
		color: var(--color-text-secondary);
	}

	.disclaimer-footer {
		margin-top: 1.5rem;
		font-weight: bold;
		color: var(--color-text-primary);
	}
</style>

