<style>
	.disclaimer {
		margin: 2em auto;
		padding: 1.5em 1.5em;
		max-width: 720px;
		background: var(--bg-secondary, #FFFFFF);
		border: 2px outset var(--bg-primary, #AAAAAA);
		font-size: 13px;
		line-height: 1.6;
		color: var(--text-primary, #000000);
		font-family: 'Courier New', 'Courier', monospace;
	}

	.disclaimer-title {
		margin: 0 0 0.75em 0;
		padding-bottom: 0.5em;
		border-bottom: 1px solid var(--border-dark, #555555);
		color: var(--text-primary, #000000);
		font-weight: 400;
		font-size: 14px;
		font-family: 'Press Start 2P', 'Courier New', monospace;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.disclaimer p {
		margin: 0.75em 0;
		padding: 0;
	}

	.disclaimer-humor {
		margin-top: 1em;
		padding-top: 1em;
		border-top: 1px solid var(--border-dark, #555555);
		color: var(--text-secondary, #555555);
		font-style: normal;
	}

	.disclaimer-footer {
		margin-top: 1em;
		padding-top: 1em;
		border-top: 1px solid var(--border-dark, #555555);
		font-size: 13px;
		font-weight: 400;
		color: var(--text-primary, #000000);
	}

	@media (max-width: 720px) {
		.disclaimer {
			margin: 1.5em 1em;
			padding: 1em;
			font-size: 12px;
		}

		.disclaimer-title {
			font-size: 12px;
		}
	}
</style>

