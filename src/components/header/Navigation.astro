---
const baseUrl = import.meta.env.BASE_URL.endsWith('/') 
	? import.meta.env.BASE_URL 
	: import.meta.env.BASE_URL + '/';

const currentPath = Astro.url.pathname;
const isLibrary = currentPath.includes('/library');
const isAbout = currentPath.includes('/about');
---

<nav class="main-nav" aria-label="Основная навигация">
	<a href={`${baseUrl}library`} class="nav-link" aria-current={isLibrary ? 'page' : undefined}>[БИБЛИОТЕКА]</a>
	<a href={`${baseUrl}about`} class="nav-link" aria-current={isAbout ? 'page' : undefined}>[О_ПРОЕКТЕ]</a>
</nav>
