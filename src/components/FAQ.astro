---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

interface Props {
	items: { q: string; a: string }[];
}

const { items } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="faq-section">
	<h2 class="faq-title">FAQ</h2>
	<div class="faq-list">
		{items.map((item) => (
			<div class="faq-item">
				<p class="faq-question">
					• {item.q}
				</p>
				<p class="faq-answer">
					{item.a}
				</p>
			</div>
		))}
	</div>
</section>

<style>
	.faq-section {
		margin-top: var(--space-10);
		margin-bottom: var(--space-6);
	}

	.faq-title {
		margin-top: var(--space-12);
		margin-bottom: var(--space-6);
		margin-left: 0;
		margin-right: 0;
		padding: 0;
		color: var(--nes-accent-green);
		font-family: 'Press Start 2P', monospace;
		font-size: 24px; /* 24px — как .prose h2 */
		font-weight: 400; /* Press Start 2P не имеет bold */
		text-transform: none; /* Как .prose h2 — без uppercase для лучшей читаемости */
		border-bottom: 4px solid var(--nes-bg-secondary);
		padding-bottom: 0.5rem; /* Как .prose h2 */
		position: relative; /* Как .prose h2 */
	}

	.faq-list {
		display: flex;
		flex-direction: column;
		gap: var(--space-6);
	}

	.faq-question {
		color: var(--nes-accent-green);
		font-family: 'Press Start 2P', monospace;
		font-size: 0.75rem;
		font-weight: bold; /* Press Start 2P будет выделяться через другие стили */
		margin-bottom: 0;
		line-height: 1.6;
	}

	.faq-answer {
		color: var(--color-text-primary);
		font-family: 'JetBrains Mono', monospace;
		font-weight: normal;
		line-height: 1.8;
		font-size: 0.95rem;
		margin-top: 1em; /* 1 строка от вопроса */
		padding-left: var(--space-2);
	}
</style>
