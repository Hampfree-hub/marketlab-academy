---
// Ненавязчивая форма подписки
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="subscribe-form">
	<p class="subscribe-text">
		{t('home.newsletter_title')}
	</p>
	<p class="subscribe-note" style="margin-bottom: 1.5rem;">
		{t('home.newsletter_desc')}
	</p>
	<form id="newsletter-form" class="subscribe-input-group" action="#" method="post">
		<input 
			type="email" 
			placeholder={t('home.newsletter_placeholder')} 
			required
			name="email"
			class="subscribe-input"
			aria-label={t('home.newsletter_placeholder')}
		/>
		<button type="submit" class="subscribe-button btn-submit">
			{t('home.newsletter_button')}
		</button>
	</form>
	<p id="form-error" class="error-text" role="alert" style="display: none; color: var(--color-error); margin-top: 1rem;">{t('home.newsletter_error')}</p>
	<p id="form-success" class="success-text" role="status" style="display: none; color: var(--color-success); margin-top: 1rem;">{t('home.newsletter_success')}</p>
	<p class="subscribe-note">
		{t('newsletter.no_spam')}
	</p>
</div>

<script is:inline define:vars={{ sendingMsg: t('home.newsletter_sending'), buttonMsg: t('home.newsletter_button') }}>
	// Newsletter Validation
	const initNewsletter = () => {
		try {
			const form = document.getElementById('newsletter-form');
			const errorMsg = document.getElementById('form-error');
			const successMsg = document.getElementById('form-success');
			const submitBtn = form?.querySelector('.btn-submit');

			if (!form) return;

			form.addEventListener('submit', async (e) => {
				e.preventDefault();
				if (errorMsg) errorMsg.style.display = 'none';
				if (successMsg) successMsg.style.display = 'none';
				
				const email = form.email.value;
				const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

				if (!emailPattern.test(email)) {
					if (errorMsg) errorMsg.style.display = 'block';
					return;
				}

				if (submitBtn) {
					submitBtn.disabled = true;
					submitBtn.innerText = sendingMsg;
				}

				// Simulation for Brevo integration
				setTimeout(() => {
					if (successMsg) successMsg.style.display = 'block';
					form.reset();
					if (submitBtn) {
						submitBtn.disabled = false;
						submitBtn.innerText = buttonMsg;
					}
				}, 1000);
			});
		} catch (err) {
			console.error('Newsletter error:', err);
		}
	};

	initNewsletter();
	document.addEventListener('astro:page-load', initNewsletter);
	document.addEventListener('astro:after-swap', initNewsletter);
</script>

<style>
	/* 8-bit NES Subscribe Form */
	.subscribe-form {
		margin: 3em 0;
		padding: 2em;
		background: var(--color-card-bg);
		border: 2px solid var(--color-border);
		border-bottom: 4px solid var(--color-border);
		text-align: center;
		/* NO border-radius, NO box-shadow, NO smooth transitions */
		transition: border-bottom-color 0.10s steps(3);
	}

	.subscribe-form:hover {
		border-bottom-color: var(--nes-accent-green-dark);
	}

	.subscribe-text {
		margin: 0 0 1.5em 0;
		color: var(--color-text-primary);
		font-size: 1rem;
		font-family: 'JetBrains Mono', monospace;
		line-height: 1.6;
		padding: 0;
	}

	.subscribe-input-group {
		display: flex;
		gap: 0.5em;
		max-width: 500px;
		margin: 0 auto;
		flex-wrap: wrap;
		justify-content: center;
	}

	.subscribe-input {
		flex: 1;
		min-width: 200px;
		padding: 12px 16px;
		border: 2px solid var(--color-border);
		background: var(--color-bg);
		color: var(--color-text-primary);
		font-size: 0.95rem;
		font-family: 'JetBrains Mono', monospace;
		/* 8-bit steps animation */
		transition: border-color 0.10s steps(3);
	}

	.subscribe-input:focus {
		outline: none;
		border-color: var(--nes-accent-green);
	}

	.subscribe-input::placeholder {
		color: var(--color-text-secondary);
		opacity: 0.7;
	}

	.subscribe-button {
		display: inline-block;
		padding: 12px 32px;
		font-family: 'JetBrains Mono', monospace;
		font-weight: bold;
		text-transform: uppercase;
		border: 2px solid var(--color-accent);
		border-bottom: 4px solid var(--nes-accent-green-dark);
		color: var(--color-accent);
		background: transparent;
		cursor: pointer;
		text-align: center;
		/* 8-bit steps animation */
		transition: background 0.2s steps(4),
		            border-color 0.2s steps(4),
		            color 0.2s steps(4);
	}

	.subscribe-button:hover {
		background: var(--color-accent);
		color: #FFFFFF !important; /* Чисто белый для читаемости */
		border-color: var(--color-accent);
		border-bottom-color: var(--nes-accent-green-dark); /* Сохраняем видимый bulge */
		text-decoration: none;
	}

	.subscribe-note {
		margin: 1em 0 0 0;
		font-size: 0.85rem;
		color: var(--color-text-secondary);
		font-family: 'JetBrains Mono', monospace;
		line-height: 1.6;
		padding: 0;
	}

	@media (max-width: 720px) {
		.subscribe-form {
			padding: 1.5em;
		}

		.subscribe-input-group {
			flex-direction: column;
		}

		.subscribe-input,
		.subscribe-button {
			width: 100%;
		}
	}
</style>

