</style>

<style>
	.windows98-header {
		margin: 0;
		padding: 0;
		background: var(--bg-primary, #AAAAAA);
		border-bottom: 2px solid var(--border-dark, #555555);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	/* Линия-разделитель для тёмной темы */
	[data-theme="dark"] .windows98-header {
		border-bottom: 2px solid var(--accent, #00AA00);
	}


	/* Hamburger меню для мобильных */
	.hamburger-menu {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: var(--bg-primary, #AAAAAA);
		border: 2px outset var(--bg-primary, #AAAAAA);
		border-top-color: var(--border-light, #FFFFFF);
		border-left-color: var(--border-light, #FFFFFF);
		border-bottom-color: var(--border-dark, #555555);
		border-right-color: var(--border-dark, #555555);
		padding: 6px;
		cursor: pointer;
		z-index: 101;
		position: relative;
		border-radius: 0 !important;
		transition: all 0.1s ease;
	}

	.hamburger-menu:hover {
		border: 2px outset var(--bg-primary, #AAAAAA);
		border-top-color: var(--border-light, #FFFFFF);
		border-left-color: var(--border-light, #FFFFFF);
		border-bottom-color: var(--border-dark, #555555);
		border-right-color: var(--border-dark, #555555);
		background: var(--bg-dark, #555555);
		transform: translate(-1px, -1px);
		box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
	}

	.hamburger-menu:active {
		border: 2px inset var(--bg-primary, #AAAAAA);
		border-top-color: var(--border-dark, #555555);
		border-left-color: var(--border-dark, #555555);
		border-bottom-color: var(--border-light, #FFFFFF);
		border-right-color: var(--border-light, #FFFFFF);
		transform: translate(1px, 1px);
		box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.3);
	}

	.hamburger-line {
		width: 20px;
		height: 2px;
		background: var(--text-primary, #000000);
		transition: all 0.3s ease;
	}

	.hamburger-menu[aria-expanded="true"] .hamburger-line:nth-child(1) {
		transform: rotate(45deg) translate(5px, 5px);
	}

	.hamburger-menu[aria-expanded="true"] .hamburger-line:nth-child(2) {
		opacity: 0;
	}

	.hamburger-menu[aria-expanded="true"] .hamburger-line:nth-child(3) {
		transform: rotate(-45deg) translate(5px, -5px);
	}

	/* Мобильное меню overlay */
	.mobile-menu-overlay {
		display: none;
		position: fixed;
		inset: 0;
		background: rgba(0, 0, 0, 0.5);
		z-index: 99;
		opacity: 0;
		visibility: hidden;
		transition: opacity 0.3s ease, visibility 0.3s ease;
	}

	.mobile-menu-overlay.active {
		opacity: 1;
		visibility: visible;
	}

	.mobile-menu {
		position: fixed;
		top: 0;
		right: 0;
		width: 80vw;
		max-width: 320px;
		height: 100vh;
		background: var(--bg-secondary, #FFFFFF);
		border-left: 2px solid var(--border-dark, #555555);
		transform: translateX(100%);
		transition: transform 0.3s ease;
		z-index: 100;
		overflow-y: auto;
		padding: 1em;
		box-shadow: -4px 0 8px rgba(0, 0, 0, 0.2);
	}

	.mobile-menu.active {
		transform: translateX(0);
	}

	.mobile-menu-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 0.5em;
		margin-bottom: 1.5em;
		padding-bottom: 1em;
		border-bottom: 2px solid var(--border-dark, #555555);
		flex-shrink: 0;
	}

	[data-theme="dark"] .mobile-menu-header {
		border-bottom: 2px solid var(--accent, #00AA00);
	}

	.mobile-menu-close {
		background: var(--bg-primary, #AAAAAA);
		border: 2px outset var(--bg-primary, #AAAAAA);
		border-top-color: var(--border-light, #FFFFFF);
		border-left-color: var(--border-light, #FFFFFF);
		border-bottom-color: var(--border-dark, #555555);
		border-right-color: var(--border-dark, #555555);
		padding: 4px 8px;
		cursor: pointer;
		font-family: 'Courier New', 'Courier', monospace;
		font-size: 14px;
		color: var(--text-primary, #000000);
		border-radius: 0 !important;
		transition: all 0.1s ease;
	}

	.mobile-menu-close:hover {
		border: 2px outset var(--bg-primary, #AAAAAA);
		border-top-color: var(--border-light, #FFFFFF);
		border-left-color: var(--border-light, #FFFFFF);
		border-bottom-color: var(--border-dark, #555555);
		border-right-color: var(--border-dark, #555555);
		background: var(--bg-dark, #555555);
		color: var(--bg-secondary, #FFFFFF);
		transform: translate(-1px, -1px);
		box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
	}

	.mobile-menu-close:active {
		border: 2px inset var(--bg-primary, #AAAAAA);
		border-top-color: var(--border-dark, #555555);
		border-left-color: var(--border-dark, #555555);
		border-bottom-color: var(--border-light, #FFFFFF);
		border-right-color: var(--border-light, #FFFFFF);
		transform: translate(1px, 1px);
		box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.3);
	}

	.mobile-menu-content {
		display: flex;
		flex-direction: column;
		gap: 0.5em;
		flex-grow: 1;
		overflow-y: auto;
	}

	.mobile-menu-content a,
	.mobile-menu-content .dropdown-button {
		display: block;
		padding: 0.75em 1em;
		color: var(--text-primary, #000000);
		text-decoration: none;
		border: 2px outset var(--bg-primary, #AAAAAA);
		border-top-color: var(--border-light, #FFFFFF);
		border-left-color: var(--border-light, #FFFFFF);
		border-bottom-color: var(--border-dark, #555555);
		border-right-color: var(--border-dark, #555555);
