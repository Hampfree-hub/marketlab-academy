---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';

import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Analytics from './Analytics.astro';

interface Props {
	title: string;
	description?: string;
	metaOgTitle?: string; // OG заголовок для соцсетей (опционально, до 100 символов)
	image?: ImageMetadata | string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const SUPPORTED_LANGS = ['ru', 'en', 'es'] as const;

// --- hreflang alternates (static hosting SEO hygiene) ---
const pathname = canonicalURL.pathname;
const pathParts = pathname.split('/').filter(Boolean);
const hasLangPrefix = pathParts.length > 0 && SUPPORTED_LANGS.includes(pathParts[0] as any);
const restParts = hasLangPrefix ? pathParts.slice(1) : pathParts;
const trailingSlash = pathname.endsWith('/');

const buildLangPath = (lang: (typeof SUPPORTED_LANGS)[number]) => {
	const rest = restParts.length ? restParts.join('/') : '';
	if (!rest) return `/${lang}/`;
	return `/${lang}/${rest}${trailingSlash ? '/' : ''}`;
};

const { title, description: descriptionProp, metaOgTitle, image: imageProp } = Astro.props;

// Автоматическая генерация description, если не указан
const description = descriptionProp || SITE_DESCRIPTION;

// Используем metaOgTitle для OG тегов, если указан, иначе используем title
const ogTitle = metaOgTitle || title;

// Определяем путь к OG изображению
// Приоритет: 1) явно указанное изображение, 2) автоматически сгенерированное OG изображение, 3) fallback
let ogImageUrl: URL;

if (imageProp) {
	// Если изображение явно указано, используем его
	if (typeof imageProp === 'string') {
		let imagePath = imageProp;
		if (imagePath.startsWith('./')) {
			imagePath = imagePath.slice(2);
		}
		if (imagePath.startsWith('/')) {
			ogImageUrl = new URL(imagePath, Astro.site);
		} else {
			const currentPath = Astro.url.pathname.endsWith('/') ? Astro.url.pathname.slice(0, -1) : Astro.url.pathname;
			ogImageUrl = new URL(currentPath + '/' + imagePath, Astro.site);
		}
	} else {
		// ImageMetadata
		ogImageUrl = new URL(imageProp.src, Astro.site);
	}
} else {
	// Автоматически определяем путь к сгенерированному OG изображению
	const pathname = Astro.url.pathname;
	const pathParts = pathname.split('/').filter(Boolean);
	const langPrefix = pathParts.length > 0 && SUPPORTED_LANGS.includes(pathParts[0] as any) ? pathParts[0] : 'ru';

	// Проверяем, это статья (library/[lang]/[...slug]) или главная
	if (pathname.includes('/library/')) {
		const libraryIndex = pathParts.indexOf('library');
		if (libraryIndex >= 0) {
			const lang = pathParts[libraryIndex - 1] || langPrefix;
			const slugParts = pathParts.slice(libraryIndex + 1);
			const slug = slugParts.length > 0 ? slugParts.join('-') : 'homepage';
			ogImageUrl = new URL(`/og/${lang}-${slug}.png`, Astro.site);
		} else {
			ogImageUrl = new URL(FallbackImage.src, Astro.site);
		}
	} else if (pathname === '/' || pathname === '/ru/' || pathname === '/en/' || pathname === '/es/') {
		// Главная страница (мультиязычная)
		ogImageUrl = new URL(`/og/${langPrefix}-homepage.png`, Astro.site);
	} else if (pathname.includes('/about/')) {
		// Страница "О проекте" (мультиязычная)
		ogImageUrl = new URL(`/og/${langPrefix}-about.png`, Astro.site);
	} else {
		// Fallback для других страниц
		ogImageUrl = new URL(FallbackImage.src, Astro.site);
	}
}
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />

<!-- Google Fonts: Press Start 2P (pixel headings) + JetBrains Mono (body) -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet" />

<!-- Favicon: правильный порядок для максимальной совместимости -->
<link rel="icon" type="image/x-icon" href={new URL("/favicon.ico", Astro.site).href} />
<link rel="icon" type="image/svg+xml" href={new URL("/favicon.svg", Astro.site).href} />
<link rel="icon" type="image/png" sizes="16x16" href={new URL("/favicon-96x96.png", Astro.site).href} />
<link rel="icon" type="image/png" sizes="32x32" href={new URL("/favicon-96x96.png", Astro.site).href} />
<link rel="apple-touch-icon" href={new URL("/apple-touch-icon.png", Astro.site).href} />
<link rel="manifest" href={new URL("/site.webmanifest", Astro.site).href} />

<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Alternate Language Links (SEO) -->
{SUPPORTED_LANGS.map((l) => (
	<link rel="alternate" hreflang={l} href={new URL(buildLangPath(l), Astro.site)} />
))}

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={ogTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={ogTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImageUrl} />

<script is:inline>
	try {
		const l = document.documentElement.lang;
		if (l && ['ru', 'en', 'es'].includes(l)) {
			localStorage.setItem('ml_lang', l);
		}
	} catch {}
</script>

<!-- JSON-LD Structured Data (Organization) -->
{(() => {
	const orgSchema = {
		"@context": "https://schema.org",
		"@type": "Organization",
		"name": "MarketLab Academy",
		"url": Astro.site?.href || "https://marketlab-academy.org",
		"logo": {
			"@type": "ImageObject",
			"url": new URL("/favicon-96x96.png", Astro.site || "https://marketlab-academy.org").href
		},
		"description": SITE_DESCRIPTION,
		"sameAs": [
			"https://t.me/Hampfree"
		]
	};
	const orgJson = JSON.stringify(orgSchema, null, 0);
	return <script type="application/ld+json" set:html={orgJson} />;
})()}

<!-- Analytics -->
<Analytics />
