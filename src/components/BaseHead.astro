---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import '../styles/nes8bit.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Analytics from './Analytics.astro';

interface Props {
	title: string;
	description?: string;
	image?: ImageMetadata | string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description: descriptionProp, image: imageProp } = Astro.props;

// Автоматическая генерация description, если не указан
const description = descriptionProp || SITE_DESCRIPTION;

// Определяем путь к OG изображению
// Приоритет: 1) явно указанное изображение, 2) автоматически сгенерированное OG изображение, 3) fallback
let ogImageUrl: URL;

if (imageProp) {
	// Если изображение явно указано, используем его
	if (typeof imageProp === 'string') {
		let imagePath = imageProp;
		if (imagePath.startsWith('./')) {
			imagePath = imagePath.slice(2);
		}
		if (imagePath.startsWith('/')) {
			ogImageUrl = new URL(imagePath, Astro.site);
		} else {
			const currentPath = Astro.url.pathname.endsWith('/') 
				? Astro.url.pathname.slice(0, -1) 
				: Astro.url.pathname;
			ogImageUrl = new URL(currentPath + '/' + imagePath, Astro.site);
		}
	} else {
		// ImageMetadata
		ogImageUrl = new URL(imageProp.src, Astro.site);
	}
} else {
	// Автоматически определяем путь к сгенерированному OG изображению
	// Формат: /marketlab-academy/og/{lang}-{slug}.png для статей
	// Или /marketlab-academy/og/homepage.png для главной
	
	const pathname = Astro.url.pathname;
	
	// Проверяем, это статья (library/[lang]/[...slug]) или главная
	if (pathname.includes('/library/')) {
		// Извлекаем lang и slug из пути
		const pathParts = pathname.split('/').filter(Boolean);
		const langIndex = pathParts.indexOf('library');
		if (langIndex >= 0 && pathParts[langIndex + 1]) {
			const lang = pathParts[langIndex + 1];
			const slug = pathParts.slice(langIndex + 2).join('-') || 'homepage';
			ogImageUrl = new URL(`/marketlab-academy/og/${lang}-${slug}.png`, Astro.site);
		} else {
			// Fallback для неожиданных путей
			ogImageUrl = new URL(FallbackImage.src, Astro.site);
		}
	} else if (pathname === '/marketlab-academy/' || pathname === '/marketlab-academy/ru/' || pathname === '/marketlab-academy/en/' || pathname === '/marketlab-academy/es/') {
		// Главная страница
		ogImageUrl = new URL('/marketlab-academy/og/homepage.png', Astro.site);
	} else {
		// Fallback для других страниц
		ogImageUrl = new URL(FallbackImage.src, Astro.site);
	}
}
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<!-- Favicon: правильный порядок для максимальной совместимости -->
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
<!-- Для iOS устройств -->
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<!-- Web App Manifest -->
<link rel="manifest" href="/site.webmanifest" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Google Fonts: 8-bit Pixel Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImageUrl} />

<!-- Analytics -->
<Analytics />
