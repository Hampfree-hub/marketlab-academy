---
import { SITE_TITLE } from '../consts';
const baseUrl = import.meta.env.BASE_URL.endsWith('/') 
	? import.meta.env.BASE_URL 
	: import.meta.env.BASE_URL + '/';

const currentPath = Astro.url.pathname;
const isArchive = currentPath.includes('/blog');
const isAbout = currentPath.includes('/about');
---

<header class="main-header">
	<div class="header-container">
		<a href={baseUrl} class="logo" aria-label={`${SITE_TITLE} - –ì–ª–∞–≤–Ω–∞—è`}>
			<span class="prompt" aria-hidden="true">></span> {SITE_TITLE}
		</a>

		<nav class="desktop-nav" aria-label="–û—Å–Ω–æ–≤–Ω–∞—è –Ω–∞–≤–∏–≥–∞—Ü–∏—è">
			<a href={`${baseUrl}blog`} class="nav-link" aria-current={isArchive ? 'page' : undefined}>–ê—Ä—Ö–∏–≤</a>
			<a href={`${baseUrl}about`} class="nav-link" aria-current={isAbout ? 'page' : undefined}>–û –ø—Ä–æ–µ–∫—Ç–µ</a>
			<button id="theme-toggle" class="theme-btn" aria-label="–ü–µ—Ä–µ–∫–ª—é—á–∏—Ç—å —Ç–µ–º—É">
				<span class="theme-icon">üåô</span> –¢–µ–º–∞
			</button>
		</nav>

		<div class="mobile-actions">
			<button id="theme-toggle-mobile" class="theme-btn" aria-label="–ü–µ—Ä–µ–∫–ª—é—á–∏—Ç—å —Ç–µ–º—É">
				<span class="theme-icon">üåô</span>
			</button>
			<button id="hamburger" class="hamburger" aria-label="–û—Ç–∫—Ä—ã—Ç—å –º–µ–Ω—é">
				<span></span>
				<span></span>
				<span></span>
			</button>
		</div>
	</div>

	<div id="mobile-menu" class="mobile-menu" aria-label="–ú–æ–±–∏–ª—å–Ω–æ–µ –º–µ–Ω—é">
		<a href={`${baseUrl}blog`} aria-current={isArchive ? 'page' : undefined}>–ê—Ä—Ö–∏–≤</a>
		<a href={`${baseUrl}about`} aria-current={isAbout ? 'page' : undefined}>–û –ø—Ä–æ–µ–∫—Ç–µ</a>
	</div>
</header>

<style>
	.main-header {
		position: sticky;
		top: 0;
		background: var(--color-bg);
		border-bottom: 1px solid var(--color-border);
		z-index: var(--z-index-header);
	}

	.header-container {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 1rem var(--horizontal-padding);
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		font-family: 'JetBrains Mono', monospace;
		font-weight: 700;
		color: var(--color-text-primary);
		font-size: 1.1rem;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.prompt {
		color: var(--color-accent);
		animation: blink 1s steps(2, start) infinite;
	}

	@keyframes blink { to { opacity: 0; } }

	.desktop-nav {
		display: flex;
		align-items: center;
		gap: 1.5rem;
	}

	.nav-link {
		font-family: 'JetBrains Mono', monospace;
		font-size: 0.9rem;
		color: var(--color-text-primary);
		padding: 0.5rem 1rem;
		border: 1px solid transparent;
	}

	.nav-link:hover, .nav-link[aria-current="page"] {
		color: var(--color-accent);
		border-color: var(--color-border);
	}

	.theme-btn {
		background: transparent;
		border: 1px solid var(--color-border);
		color: var(--color-text-primary);
		padding: 6px 12px;
		cursor: pointer;
		font-family: 'JetBrains Mono', monospace;
		font-size: 0.85rem;
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.theme-btn:hover {
		border-color: var(--color-accent);
		color: var(--color-accent);
	}

	.hamburger {
		display: none;
		flex-direction: column;
		gap: 6px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 4px;
	}

	.hamburger span {
		display: block;
		width: 24px;
		height: 2px;
		background: var(--color-accent);
		transition: var(--transition-normal);
	}

	.mobile-menu {
		display: none;
		flex-direction: column;
		background: var(--color-bg);
		border-bottom: 1px solid var(--color-border);
		padding: 1rem var(--horizontal-padding);
		gap: 1.5rem;
	}

	.mobile-menu a {
		font-family: 'JetBrains Mono', monospace;
		font-size: 1.2rem;
		color: var(--color-text-primary);
	}

	.mobile-menu a[aria-current="page"] {
		color: var(--color-accent);
	}

	@media (max-width: 768px) {
		.desktop-nav { display: none; }
		.mobile-actions { display: flex; gap: 1rem; align-items: center; }
		.mobile-menu.active { display: flex; }
	}
</style>

<script is:inline>
	const themeToggle = () => {
		const getTheme = () => localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: light)').matches ? 'light' : 'dark');
		const setTheme = (t) => {
			document.documentElement.setAttribute('data-theme', t);
			localStorage.setItem('theme', t);
			const icons = document.querySelectorAll('.theme-icon');
			icons.forEach(i => i.innerText = t === 'dark' ? 'üåô' : '‚òÄÔ∏è');
		};

		setTheme(getTheme());

		document.querySelectorAll('#theme-toggle, #theme-toggle-mobile').forEach(btn => {
			btn.addEventListener('click', () => {
				const next = document.documentElement.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
				setTheme(next);
			});
		});
	};
	themeToggle();

	const hamburger = document.getElementById('hamburger');
	const mobileMenu = document.getElementById('mobile-menu');
	if (hamburger && mobileMenu) {
		hamburger.addEventListener('click', () => {
			const isActive = mobileMenu.classList.toggle('active');
			hamburger.setAttribute('aria-expanded', isActive);
			hamburger.setAttribute('aria-label', isActive ? '–ó–∞–∫—Ä—ã—Ç—å –º–µ–Ω—é' : '–û—Ç–∫—Ä—ã—Ç—å –º–µ–Ω—é');
		});
	}
</script>
