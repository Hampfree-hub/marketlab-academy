---
const today = new Date();
---

<footer>
	<div class="footer-grid">
		<div class="footer-column">
			<h3>Каналы</h3>
			<a href="https://t.me/hampfree_market_lab" target="_blank">Telegram</a>
			<a href="https://vk.com/hampfree_market_lab" target="_blank">VK</a>
			<a href="https://paragraph.com/@hampfree" target="_blank">Paragraph</a>
		</div>
		<div class="footer-column">
			<h3>Трейдинг</h3>
			<a href="https://www.bybit.com/invite?ref=PWMD24" target="_blank">Bybit Invite</a>
			<a href="https://veles.finance/invite/washmallay" target="_blank">Veles Bot</a>
		</div>
	</div>
	<div class="bottom">
		<p>&copy; {today.getFullYear()} MARKETLAB ACADEMY</p>
	</div>
</footer>

<style>
	footer {
		padding: 48px var(--horizontal-padding);
		max-width: var(--max-width);
		margin: 0 auto;
		border-top: 1px solid var(--color-border);
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 32px;
		margin-bottom: 48px;
	}

	h3 {
		font-size: 0.9rem;
		color: var(--color-accent);
		margin-bottom: 16px;
		text-transform: uppercase;
	}

	.footer-column a {
		display: block;
		color: var(--color-text-secondary);
		font-size: 0.9rem;
		margin-bottom: 8px;
	}

	.footer-column a:hover {
		color: #fff;
	}

	.bottom {
		text-align: center;
		opacity: 0.4;
		font-size: 0.8rem;
		font-family: 'JetBrains Mono', monospace;
	}

	@media (max-width: 480px) {
		.footer-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
