<style>
	footer {
		padding: 2em 1em;
		background: var(--bg-secondary, #FFFFFF);
		color: var(--text-primary, #000000);
		margin-top: 3em;
		border-top: 2px solid var(--border-dark, #555555);
		font-family: 'Courier New', 'Courier', monospace;
		font-size: 14px;
	}

	/* Линия-разделитель для тёмной темы */
	[data-theme="dark"] footer {
		border-top: 2px solid var(--accent, #00AA00);
	}

	.footer-content {
		max-width: 720px;
		margin: 0 auto;
		padding: 0 1em;
	}

	.footer-copyright {
		text-align: center;
		margin-bottom: 1.5em;
		padding-bottom: 1.5em;
		border-bottom: 1px solid var(--border-dark, #555555);
	}

	.footer-copyright p {
		margin: 0;
		color: var(--text-secondary, #555555);
		font-size: 13px;
		font-family: 'Courier New', 'Courier', monospace;
	}

	.footer-links {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
		gap: 1.5em;
		margin-bottom: 1.5em;
	}

	.footer-section h3 {
		margin: 0 0 0.75em 0;
		font-size: 13px;
		color: var(--text-primary, #000000);
		font-weight: 400;
		font-family: 'Courier New', 'Courier', monospace;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.footer-section a {
		display: block;
		margin: 0.4em 0;
		padding: 0.25em 0;
		color: var(--link, #0000AA);
		text-decoration: underline;
		transition: all 0.1s ease;
		font-size: 13px;
		font-family: 'Courier New', 'Courier', monospace;
	}

	.footer-section a:hover {
		color: var(--link-hover, #00AA00);
		background: var(--text-primary, #000000);
		color: var(--bg-secondary, #FFFFFF);
		text-decoration: none;
		padding-left: 0.25em;
	}

	@media (max-width: 720px) {
		footer {
			padding: 1.5em 1em;
		}

		.footer-links {
			grid-template-columns: 1fr;
			gap: 1.5em;
		}

		.footer-section h3 {
			font-size: 12px;
		}

		.footer-section a {
			font-size: 12px;
		}
	}
</style>
